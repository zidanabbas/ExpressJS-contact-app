<div class="container mt-3">
    <div class="row">
        <div class="col">
            <h2 class="">Daftar Contact</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Nama</th>
                        <th scope="col">No Handphone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>

                    <% if (contacts.length === 0) { %>
                    <div class="alert alert-danger fw-bold" role="alert">
                        Data kontak masih kosong!
                    </div>
                    <% } %>
                    <a href="/contact/add" class="btn btn-primary badge mb-2">Tambah Data Contact</a>

                    <% contacts.forEach((contact, i) => { i++ %>
                    <tr>
                        <th scope="row"><%= i++ %></th>
                        <td><%= contact.nama %></td>
                        <td><%= contact.nohp %></td>
                        <td><%= contact.email %></td>
                        <td>
                            <a href="/contact/<%= contact.nama %>/"
                                class="btn btn-success badge rounded-pill">Detail</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>